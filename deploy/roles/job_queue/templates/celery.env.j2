# Celery configuration, taken from Celery docs at: https://docs.celeryq.dev/en/stable/userguide/daemonizing.html#usage-systemd

# Name of nodes to start
# here we have a single node
CELERYD_NODES="{{ groups['backend']|first }}"

# Absolute or relative path to the 'celery' command:
CELERY_BIN="{{ venv_root }}/bin/celery"

# App instance to use
CELERY_APP="lick_searchable_archive"

# How to call manage.py
CELERYD_MULTI="multi"

# Extra command-line arguments to the worker
CELERYD_OPTS="--time-limit=300 --concurrency=2"

# - %n will be replaced with the first part of the nodename.
# - %I will be replaced with the current child process index
#   and is important when using the prefork pool to avoid race conditions.
CELERYD_PID_FILE="{{ venv_root }}/var/run/celery/%n.pid"
CELERYD_LOG_FILE="{{ archive_log_dir }}/celery/%n%I.log"
CELERYD_LOG_LEVEL="{{ 'INFO' if archive_config == 'ops' else 'DEBUG' }}"

