{% extends "layout.html" %}
{% block page_name %}login{% endblock %}
{% block main %}
<p id="login_text" class="login_message">Enter your username (typically your e-mail address) and password to login.</p>
<section id = "error_section" class="search_error">
</section>
<form class="login_form">    
    <label id="username_label" for="login_username">Username:</label>
    <input id="login_username" type="text" autofocus autocapitalize="none" autocomplete="username" maxlength="150" required />
    <label id="password_label" for="login_password">Password:</label>
    <input id="login_password" type="password" autocomplete="current-password" required />  
    <button id="login_button" type="button" value="login">Login</button>
</form>
<a href="index.html">Return to main page</a>
{% endblock %}
{% block scripts %}
<script type="module" src="scripts/login.js"></script>
{% endblock %}
    
